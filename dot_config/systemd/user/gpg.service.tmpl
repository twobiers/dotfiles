{{ if eq .chezmoi.os "linux" }}
{{ if (.chezmoi.kernel.osrelease | lower | contains "microsoft") }}

[Unit]
Description=GPG Relay

[Service]
ExecStartPre=/bin/rm -f /home/{{ .user.linux }}/.gnupg/S.gpg-agent
ExecStart=/usr/bin/socat "UNIX-LISTEN:/home/{{ .user.linux }}/.ssh/agent.sock,fork,unlink-close,unlink-early" EXEC:'/mnt/c/tools/npiperelay/npiperelay.exe -ei -ep -s -a "C:/Users/{{ .user.windows }}/AppData/Local/gnupg/S.gpg-agent"',nofork

[Install]
WantedBy=default.target

{{ end }}
{{ end }}